<h2>
  <b><%= _'Arc|Code' %>:</b>
  <%=h @arc.code %>
</h2>

<p>
  <b><%= _'Arc|Extname' %>:</b>
  <%=h @arc.extname %>
</p>

<p>
  <b><%= _'Arc|Location' %>:</b>
  <%=h @arc.location %>
</p>

<p>
  <b><%= _'Arc|Summary' %>:</b>
  <%=h @arc.summary %>
</p>

<p>
  <b><%= _'Arc|Origname' %>:</b>
  <%=h @arc.origname %>
</p>

<p>
  <b><%= _'Arc|Rows' %>:</b>
  <%=h @arc.row_caption %>
</p>

<%-if logged_in? -%>
<%= link_to _('Edit'), edit_arc_path(@arc) %>
<%-end-%>

<p>
  <b><%= _'Arc|Tahs' %>:</b>
</p>
<table class="list tahs">
  <thead>
  <tr>
    <th><%= _'Tah|Path' %></th>
    <th></th>
<%-if logged_in? -%>
    <th></th>
    <th></th>
<%-end-%>
  </tr>
  </thead>

  <tbody>
<% for tah in @arc.tahs %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h tah.path %></td>
    <td><%= link_to _('Show'), tah %></td>
<%-if logged_in? -%>
    <td><%= link_to _('Edit'), edit_tah_path(tah) %></td>
    <td><%= link_to _('Destroy'), tah, :confirm => _('Are you sure?'), :method => :delete %></td>
<%-end-%>
  </tr>
<% end %>
  </tbody>
</table>

<p>
  <b><%= _'Arc|Collisions' %>:</b>
</p>
<table class="list arcs">
  <thead>
  <tr>
    <th><%= _'Arc|Code' %></th>
    <th><%= _'Arc|Extname' %></th>
    <th><%= _'Arc|Location' %></th>
    <th><%= _'Arc|Summary' %></th>
    <th><%= _'Arc|Origname' %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% for arc in @arc.collisions %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h arc.code %></td>
    <td><%=h arc.extname %></td>
    <td><%=h arc.location %></td>
    <td><%=h arc.summary %></td>
    <td><%=h arc.origname %></td>
    <td><%= link_to _('Show'), arc %></td>
  </tr>
<% end %>
  </tbody>
</table>

<p>
  <b><%= _'Arc|Duplicates' %>:</b>
</p>
<table class="list arcs">
  <thead>
  <tr>
    <th><%= _'Arc|Code' %></th>
    <th><%= _'Arc|Extname' %></th>
    <th><%= _'Arc|Location' %></th>
    <th><%= _'Arc|Summary' %></th>
    <th><%= _'Arc|Origname' %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% for arc in @arc.duplicates %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h arc.code %></td>
    <td><%=h arc.extname %></td>
    <td><%=h arc.location %></td>
    <td><%=h arc.summary %></td>
    <td><%=h arc.origname %></td>
    <td><%= link_to _('Show'), arc %></td>
  </tr>
<% end %>
  </tbody>
</table>
