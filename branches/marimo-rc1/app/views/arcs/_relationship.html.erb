<%-fields_for 'arc[relationship_attributes][]', relationship do |relationship_f|-%>
<tr>
<td>
  <%= relationship_f.text_field :to_code, :index => nil, :id => '' %>
</td>
<td>
  <%= relationship_f.select :kind, relationship_kind_collection, {}, {:index => nil, :id => ''} %>
</td>
<td>
  <%= relationship_f.text_field :note, :index => nil, :id => '' %>
</td>
<td>
  <%-unless relationship.new_record?-%>
    <%= relationship_f.hidden_field :id, :index => nil, :id => '' %>
  <%-end-%>
</td>
</tr>
<%-end-%>
